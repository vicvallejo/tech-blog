<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input id="post_titulo" name="post-title" type="text" value="{{post.post_title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input id="post_contenido" name="content" type="text" value="{{post.post_content}}" class="form-input" />
        <button type="submit" class="btn" id="edit_btn" value="{{post.post_id}}">Update Post</button>
        <button type="button" class="delete-post-btn btn" id="delete_btn" value="{{post.post_id}}">Delete Post</button>
    </form>
</div>


<script src="/js/edit_post.js"></script>

